{
	"name": "autoggl",
	"displayName": "autoggl",
	"description": "Automatically track project hours based on working directory.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:autoggl.authenticateToggl",
		"onCommand:autoggl.enable",
		"onCommand:autoggl.disable"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "autoggl.authenticateToggl",
				"title": "Autoggl: Authenticate Toggl"
			},
			{
				"command": "autoggl.enable",
				"title": "Autoggl: Enable Tracking"
			},
			{
				"command": "autoggl.disable",
				"title": "Autoggl: Disable Tracking"
			}
		],
		"configuration": {
			"title": "Autoggl",
			"type": "object",
			"properties": {
				"autoggl.togglApiToken": {
					"type": "string",
					"default": "",
					"description": "Located at https://toggl.com/app/profile"
				},
				"autoggl.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable Toggl Tracking"
				}
			}

		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2"
	}
}
